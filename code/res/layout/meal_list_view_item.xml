<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb400">
    
    <TextView 
        android:id="@+id/blank_space"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:background="#ffffff"/>
    
    <RelativeLayout 
        android:layout_below="@id/blank_space"
        android:id="@+id/meal_small_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/meal_image_view"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:contentDescription="@string/app_name"
            android:layout_height="200dp"/>
        <TextView 
            android:id="@+id/meal_name_view"
            android:layout_below="@id/meal_image_view"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <ImageView 
            android:id="@+id/meal_category_view"
            android:layout_below="@id/meal_image_view"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView 
            android:id="@+id/meal_type_view"
            android:layout_below="@id/meal_name_view"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"/>
        <TextView 
            android:id="@+id/price_view"
            android:layout_below="@id/meal_type_view"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/price_view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">        
            <Spinner 
                android:id="@+id/order_quantity_spinner"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:entries="@array/order_quanity_spinner_data"/>
            <ImageButton 
                android:id="@+id/add_to_cart_button"
                android:src="@drawable/add_to_cart_image"
                android:contentDescription="@string/app_name"
                android:layout_width="40dp"
                android:layout_height="40dp"/>   
        </LinearLayout>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/meal_large_layout"
        android:layout_below="@id/blank_space"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        
        <TextView 
            android:id="@+id/recepe_string_view"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ed5017"
            android:text="Recepe"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView 
            android:id="@+id/meal_preparation_view"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_below="@id/recepe_string_view"/>
        
        <TextView 
            android:id="@+id/serve_note_view"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="#a9a9a9"
            android:layout_below="@id/meal_preparation_view"/>
        
        <ImageButton 
            android:id="@+id/chef_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serve_note_view"
            android:contentDescription="@string/app_name"
            android:layout_alignParentLeft="true"/>
        
        <TextView 
            android:id="@+id/chef_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/chef_detail_button"
            android:layout_below="@id/serve_note_view"
            android:textSize="20sp"
            android:textStyle="bold"/>
        
    </RelativeLayout>
    

</RelativeLayout>
