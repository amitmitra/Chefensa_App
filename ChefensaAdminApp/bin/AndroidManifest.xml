<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.chefensaadminapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddChefActivity"
            android:label="@string/title_activity_add_chef" >
        </activity>
        <activity
            android:name=".AddMealActivity"
            android:label="@string/title_activity_add_meal" >
        </activity>
        <activity
            android:name=".ChefListActivity"
            android:label="@string/title_activity_chef_list" >
        </activity>
        <activity
            android:name=".MealListActivity"
            android:label="@string/title_activity_meal_list" >
        </activity>
    </application>

</manifest>
